{
    "name": "remix-template-vercel",
    "private": true,
    "description": "",
    "license": "",
    "sideEffects": false,
    "scripts": {
        "build": "remix build",
        "cypress:open": "./node_modules/.bin/cypress open",
        "cypress:run": "./node_modules/.bin/cypress run",
        "cypress:run:flow": "./node_modules/.bin/cypress run --spec cypress/integration/e2e/$FLOW/_index.spec.ts",
        "dev": "remix dev",
        "dev:hmr": "remix dev -c \"node ./server.js\"",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "hook": "pnpm lint && pnpm format:check",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "prepare": "husky install",
        "start": "remix-serve build",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "eslintIgnore": [
        "/node_modules",
        "/build",
        "/public/build",
        "/api",
        "/coverage",
        ".eslintrc.js",
        "tailwind.config.js",
        "server.js",
        "remix.config.js"
    ],
    "dependencies": {
        "@radix-ui/react-slot": "^1.0.2",
        "@remix-run/node": "^1.18.0",
        "@remix-run/react": "^1.18.0",
        "@vercel/remix": "1.18.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "isbot": "^3.6.1",
        "lucide-react": "^0.279.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^1.14.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.18.0",
        "@remix-run/eslint-config": "^1.18.0",
        "@remix-run/serve": "^1.18.0",
        "@testing-library/cypress": "^8.0.7",
        "@testing-library/dom": "^9.0.1",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^14.0.0",
        "@types/node": "20.2.5",
        "@types/react": "^18.0.24",
        "@types/react-dom": "^18.2.4",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitejs/plugin-react": "^4.0.0",
        "@vitest/coverage-c8": "^0.31.4",
        "c8": "^7.11.3",
        "cypress": "^13.1.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.5.0",
        "happy-dom": "^9.18.3",
        "husky": "^8.0.0",
        "jest": "^29.0.1",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.0.4",
        "vite": "^4.2.0",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^0.32.0"
    },
    "engines": {
        "node": ">=14"
    }
}
